    <span class="error_massage"><%= @book.errors.count %>errors prohibited this book from being saved:</span>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>


<h1 class="edit_title">Editing Book</h1>

<%= form_with model: @book do |f| %>

<div class="edit_form">
  <p>Title</p>
  
  <%= f.text_field :title %>
  
  <p>Body</p>
  
  <%= f.text_area :body %>
  
  <div class="edit_botton"><%= f.submit 'Update Book' %></div>
  
  <% end %>
</div>

<%=link_to "show", book_path(@book.id) %>
